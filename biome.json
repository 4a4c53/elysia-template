{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"includes": ["**", "!node_modules", "!dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"filenameCases": ["kebab-case"]
					}
				},
				"useNamingConvention": {
					"level": "error",
					"options": {
						"conventions": [
							{
								"selector": {
									"kind": "variable"
								},
								"match": "(.{2,})",
								"formats": ["camelCase", "CONSTANT_CASE", "PascalCase"]
							},
							{
								"selector": {
									"kind": "typeAlias"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "interface"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "enum"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "enumMember"
								},
								"formats": ["PascalCase", "CONSTANT_CASE"]
							},
							{
								"selector": {
									"kind": "objectLiteralProperty"
								},
								"formats": ["camelCase", "snake_case", "CONSTANT_CASE"]
							}
						]
					}
				},
				"useImportType": "warn",
				"noNonNullAssertion": "off",
				"useConst": "error",
				"useArrayLiterals": "error",
				"noParameterAssign": "error",
				"useTemplate": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn",
				"noForEach": "warn",
				"useLiteralKeys": "error"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"useJsonImportAttributes": "error"
			},
			"performance": {
				"noDelete": "warn",
				"noAccumulatingSpread": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noDoubleEquals": "error",
				"noVar": "error",
				"noConsole": "warn"
			},
			"nursery": {
				"useSortedClasses": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [[":BUN:", ":NODE:"], ":BLANK_LINE:", ":PACKAGE:", ":BLANK_LINE:", "@/**"]
					}
				}
			}
		}
	}
}
